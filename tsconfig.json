{
    "compilerOptions": {
        "allowJs": true,
        "jsx": "react",
        "target": "es5",
        "lib": ["es6","dom"],
        "module": "commonjs",
        "removeComments": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "paths": {
            "@components/*": ["web/components/*"],
            "@pages/*": ["web/pages/*"]
          }
    },
    "include": [
        "src",
        "tests"
    ],
    "exclude": [
        "node_modules",
    ]
}